<div class="container body-content">
    <div class="row">
        {{#each articles}}
            <div class="col-md-6">
                <article>
                    <header>
                        <a href="article/details/{{this.id}}"><img src="{{this.image}}" width="560px" height="300px"/></a>
                        <h2>{{this.title}}</h2>
                    </header>
                    <p class="sidebar-box">{{this.content}}
                    </p>

                    <small class="author">
                        {{this.User.fullName}}
                    </small>
                    <small>
                        {{this.date}}
                    </small>
                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-danger btn-xs" href="/article/delete/{{this.id}}">Delete</a>
                            <a class="btn btn-default btn-xs" href="/article/edit/{{this.id}}">Edit</a>
                            <a class="btn btn-primary btn-xs" href="/article/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{/each}}
    </div>
</div>
